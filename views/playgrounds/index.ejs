<% layout('layouts/boilerplate') %>

<div id="cluster-map"></div>

<h1>All Playgrounds</h1>
<div class="row">
  <% for (let playground of playgrounds) { %>
  <div class="col-md-6 card mb-3">
    <div class="row">
      <div class="col-md-4">
        <% if (playground.image) { %>
        <img
          class="img-fluid"
          src="<%= playground.image %>"
          alt="<%= playground.title %>"
        />
        <% } else { %>
        <img class="img-fluid" src="" alt="<%= playground.title %>" />
        <% } %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= playground.title %></h5>
          <p class="card-text"><%= playground.description %></p>
          <p class="card-text">
            <small class="text-muted"><%= playground.location %></small>
          </p>
          <a class="btn btn-primary" href="/playgrounds/<%= playground._id %>"
            >View Playground</a
          >
        </div>
      </div>
    </div>
  </div>
  <% } %>
</div>

<script>
const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
const playgrounds = '<%- JSON.stringify(playgrounds) %>';
</script>
<script src="/js/clusters.js"></script>
